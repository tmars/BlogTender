{% for h in history_online %}
{% if h.type == 'post_like' %}
<div class="post_story">
    <div class="date"><span id="like"></span>{# russian_date(h.created_date) #}</div>
    <div id="story">
        <a href="{{ path('list_post_by_login', {login: h.login}) }}">{{ h.user_name }}</a>
        понравилась статья
        <a href="{#{ env.genUrl('show_post', {login: h.login, post_slug: h.post_slug}) }#}"><span>{{ h.post_title }}</span></a>
    </div>
</div>

{% elseif h.type == 'question_like' %}
<div class="post_story">
    <div class="date"><span id="like"></span>{# russian_date(h.created_date) #}</div>
    <div id="story">
        <a href="{{ path('list_post_by_login', {login: h.login}) }}">{{ h.user_name }}</a>
        понравился вопрос
        <a href="{{ path('show_question', {id: h.question_id}) }}"><span>{{ h.question_title }}</span></a>
    </div>
</div>

{% elseif h.type == 'answer_like' %}
<div class="post_story">
    <div class="date"><span id="like"></span>{# russian_date(h.created_date) #}</div>
    <div id="story">
        <a href="{{ path('list_post_by_login', {login: h.login}) }}">{{ h.user_name }}</a>
        понравился
        <a href="{{ path('show_answer', {qid: h.question_id, aid: h.answer_id}) }}"><span>ответ</span></a>
        на вопрос
        <a href="{{ path('show_question', {id: h.question_id}) }}"><span>{{ h.question_title }}</span></a>
    </div>
</div>

{% elseif h.type == 'new_post' %}
<div class="post_story">
    <div class="date"><span id="dialog"></span>{# russian_date(h.created_date) #}</div>
    <div id="story">
