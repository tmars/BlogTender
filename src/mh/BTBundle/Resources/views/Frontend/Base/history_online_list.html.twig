    </div>
</div>

{% elseif h.type == 'new_answer' %}
<div class="post_story">
    <div class="date"><span id="dialog"></span>{# russian_date(h.created_date) #}</div>
    <div id="story">
        <a href="{{ path('list_post_by_login', {login: h.login}) }}">{{ h.user_name }}</a>
